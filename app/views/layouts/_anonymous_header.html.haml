%nav.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: 'navbar-brand' do
        = image_tag 'logo.png', alt: 'The Social Network Logo'
    .collapse.navbar-collapse
      .pull-right
        = form_tag '#', class: 'login-form' do
          .pull-left.login-field
            = label_tag :email, "Email or Phone"
            = text_field_tag :email
            .checkbox
              = label_tag :remember do
                = check_box_tag :remember
                Keep me logged in
          .pull-left.login-field
            = label_tag :password
            = password_field_tag :email
            = link_to 'Forgot your password?', '#'
          .pull-left.submit-field
            = submit_tag "Log In"