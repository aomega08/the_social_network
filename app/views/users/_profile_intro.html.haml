#profile-intro
  #profile-cover
    #cover-border
    = image_tag @user.cover_image, alt: 'Cover Photo'
    %h2
      = link_to @user.full_name, profile_url(@user)

  #profile-headline
    #profile-image
      = image_tag @user.profile_image, alt: @user.full_name
    #profile-actions
      - if @user != current_user
        .button.has-dropdown
          - if current_user.has_friend? @user
            %i.fa.fa-check
            Friends
            %ul.dropdown-menu
              %li
                Get Notifications
              %li.separator
              %li
                Close Friends
              %li
                Acquaintances
              %li
                Add to another list
              %li.separator
              %li
                Unfriend
          - elsif current_user.has_friend_request? @user
            %i.fa.fa-plus
            Friend Request Sent
            %ul.dropdown-menu
              %li
                Close Friends
              %li
                Acquaintances
              %li
                Add to another list
              %li.separator
              %li
                Cancel Request
          - else
            %i.fa.fa-plus
            Add Friend

      .button-group
        - if @user != current_user and current_user.has_friend? @user
          .button
            Following
        .button
          Message
        .button.has-dropdown
          \...
          %ul.dropdown-menu.right-dropdown
            - if @user != current_user
              - if current_user.has_friend? @user
                %li See Friendship
                %li.separator
                %li Poke
                %li.separator
              - elsif current_user.has_friend_request? @user
                %li Cancel Friend Request
              %li Report
              %li Block
            - else
              %li View as...
              %li Timeline Settings
              %li Add a Badge to Your Site

    #profile-links-container
      %ul#profile-links.clearfix
        - headline_link 'Timeline', profile_path(@user)
        - headline_link 'About', profile_about_path(@user)
        - headline_link 'Photos', '#'
        - headline_link 'Friends', '#'
        %li.has-dropdown
          = link_to '#' do
            More
            %i.fa.fa-caret-down

          %ul.dropdown-menu
            %li
              = link_to 'Places', '#'
            %li
              = link_to 'Music', '#'
            %li
              = link_to 'Movies', '#'
            %li
              = link_to 'TV Shows', '#'
            %li
              = link_to 'Books', '#'
            %li
              = link_to 'Likes', '#'
            %li
              = link_to 'Events', '#'
            %li
              = link_to 'Groups', '#'
            %li
              = link_to 'Sports', '#'
            %li
              = link_to 'Reviews', '#'
            %li
              = link_to 'Notes', '#'
            %li.separator
            %li
              = link_to 'Manage Sections', '#'
